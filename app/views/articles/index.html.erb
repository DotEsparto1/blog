<%= turbo_stream_from :articles %>
<div class="main-header-banner text-center">
  <h1 style="font-weight: 800;">Welcome</h1>
  <p class="fs-5 pb-3">A resourceful website to sharpen your knowledge.</p>
<% if current_user %>
  <div class="mb-5">
   <%= link_to new_article_path, class: 'btn btn-success btn-lg px-4' do %>
    Write a Blog
    <% end %>
  </div>
<% end %>
  <hr>
</div>
<div id="articles">
  <% if @articles.any? %>
  <%= render :partial => "article_preview", :collection => @articles, :as => :article %>
  
<nav class="d-flex justify-content-center">
  <ul class="pagination float-start rounded-pill overflow-hidden">
    <% if pagy_prev_url(@pagy) %>
    <li class="page-item"><span class="page-link bg-secondary p-2"><%== pagy_prev_link(@pagy, text: 'Previous') %></span></li>
    <% end %>
    <% if pagy_next_url(@pagy) %>
    <li class="page-item"><span class="page-link bg-secondary p-2"><%== pagy_next_link(@pagy, text: 'Next') %></span></li>
    <% end %>
  </ul>
</nav>
  <% else %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    No articles to show!
  </div>
  <% end %>
</div>

